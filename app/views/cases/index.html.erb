<%= content_tag :h1, "Current Cases" %>

<%= content_tag :table, class: "table table-striped table-hover" do %>
  <%= content_tag :tr do %>
    <%= content_tag :th, "Name" %>
    <%= content_tag :th, "Path" %>
    <%= content_tag :th, "Status" %>
  <% end %>
  <% @cases.each do |c| %>
    <%= content_tag :tr do %>
      <%= content_tag :td, c.name %>
      <%= content_tag :td, c.path %>
      <%= content_tag :td, "to do" %>
    <% end %>    
  <% end %>
<% end %>