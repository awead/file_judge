<!DOCTYPE html>
<html>
<head>
  <title>FileJudge</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar">
    <div class="navbar-inner">
      <%= link_to "FileJudge", root_path, class: "brand" %>
      <ul class="nav">
        <%= content_tag :li, link_to("Cases",root_path) %>
        <%= content_tag :li, link_to("New", new_case_path) %>
        <%= render_show_or_edit_link %>
      </ul>
    </div>
  </div>



  <%= content_tag :div, class: "container-fluid" do %>
    <%= render partial: "flash_messages" unless flash.empty? %>
    <%= yield %>
  <% end %>

</body>
</html>
